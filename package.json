{
  "scripts": {
    "dev": "nodemon",
    "build": "npm run clean && npm run build:compile && npm run build:copy",
    "clean": "rimraf dist",
    "build:compile": "tsc --project tsconfig.build.json",
    "build:copy": "copy src/**/*.yaml dist/",
    "start": "NODE_ENV=production node dist/index.js",
    "test": "jest"
  },
  "jest": {
    "verbose": true,
    "forceExit": true,
    "testTimeout": 10000,
    "moduleFileExtensions": [
      "ts",
      "json",
      "js"
    ],
    "roots": [
      "src",
      "tests"
    ],
    "testRegex": ".*\\.test\\.ts$",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testEnvironment": "node"
  },
  "dependencies": {
    "@integration-app/connector-sdk": "^0.6.5",
    "@integration-app/sdk": "^0.11.8",
    "@sinclair/typebox": "^0.22.1",
    "axios": "^0.26.0",
    "dotenv": "^10.0.0",
    "js-convert-case": "^4.2.0",
    "js-yaml": "^4.1.0",
    "split-human-name": "^2.0.12",
    "url-join": "^4.0.1",
    "yaml": "^2.1.1"
  },
  "devDependencies": {
    "@types/jest": "^27.0.3",
    "@typescript-eslint/eslint-plugin": "^5.25.0",
    "copy": "^0.3.2",
    "env-var": "^7.1.1",
    "eslint": "^8.3.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.3.1",
    "nodemon": "^2.0.15",
    "rimraf": "^3.0.2",
    "supertest": "^6.1.6",
    "ts-jest": "^27.0.7",
    "typescript": "^4.5.2"
  }
}
