{
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "build": "npm run clean && npm run build:compile && npm run build:rollup",
    "start": "node dist/server/index.js",
    "test": "jest",
    "clean": "rimraf dist",
    "dev:server": "nodemon",
    "dev:client": "rollup -c rollup.config.js --watch",
    "build:compile": "tsc --project tsconfig.build.json",
    "build:rollup": "rollup -c rollup.config.js"
  },
  "jest": {
    "verbose": true,
    "forceExit": true,
    "testTimeout": 10000,
    "moduleFileExtensions": [
      "ts",
      "json",
      "js"
    ],
    "roots": [
      "src",
      "tests"
    ],
    "testRegex": ".*\\.test\\.ts$",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testEnvironment": "node"
  },
  "dependencies": {
    "@integration-app/connector-sdk": "^0.4.1",
    "@integration-app/sdk": "^0.10.5",
    "@integration-app/ui": "^0.0.11",
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.0.6",
    "@rollup/plugin-replace": "^3.0.0",
    "@rollup/plugin-typescript": "^8.3.0",
    "@sinclair/typebox": "^0.22.1",
    "@types/react": "^17.0.36",
    "@types/react-dom": "^17.0.11",
    "axios": "^0.26.0",
    "dotenv": "^10.0.0",
    "js-convert-case": "^4.2.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rimraf": "^3.0.2",
    "rollup": "^2.60.1",
    "rollup-plugin-copy": "^3.4.0",
    "tslib": "^2.3.1",
    "typescript": "^4.5.2",
    "url-join": "^4.0.1"
  },
  "devDependencies": {
    "@types/jest": "^27.0.3",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "concurrently": "^6.4.0",
    "env-var": "^7.1.1",
    "eslint": "^8.3.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.3.1",
    "nodemon": "^2.0.15",
    "supertest": "^6.1.6",
    "ts-jest": "^27.0.7"
  }
}
